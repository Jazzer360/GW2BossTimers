<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="8dp" >

	<TextView
		android:id="@+id/bossName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:text="Boss Name"
		android:textAppearance="?android:attr/textAppearanceLarge" />

	<TextView
		android:id="@+id/timeToSpawn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
		android:text="4:20"
		android:textAppearance="?android:attr/textAppearanceLarge" />

	<TextView
		android:id="@+id/region"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/level"
		android:text="Region" />

	<TextView 
		android:id="@+id/levelLabel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/bossName"
		android:text="@string/level" />
	
	<TextView
		android:id="@+id/level"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/levelLabel"
		android:layout_below="@+id/bossName"
		android:text="80" />

	<TextView
		android:id="@+id/zone"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignRight="@+id/timeToSpawn"
		android:layout_below="@+id/timeToSpawn"
		android:text="Zone" />

	<TextView
		android:id="@+id/area"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignRight="@+id/zone"
		android:layout_below="@+id/zone"
		android:text="Area" />

</RelativeLayout>